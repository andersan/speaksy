<h1>Create a grammar point explanation</h1>

<div>
  <!-- submitting this form sends @grammar_point to the grammar_point controller create method -->
  <!-- @grammar_point = instance variable -->
  <!-- in rails forms: submit = HTTP post request --> 
  <%= form_for(@grammar_point) do |f| %> 

    <%= f.label :lesson_id %>
    <%= collection_select(:grammar_point, :lesson_id, Lesson.all, :id, :name, prompt: true) %>
    
    <%= f.label :content %>
    <%= f.text_area :content %>

    <%= f.submit "Save Grammar Point" %>
  <% end %>
</div>