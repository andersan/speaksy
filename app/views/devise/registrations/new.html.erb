<div class="col-6">
  <h2>Sign up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <%= f.label :email, class: "block"  %><!-- <br /> -->
      <%= f.email_field :email, autofocus: true, class: "block"  %>
    </div>
  
    <div class="field">
      <%= f.label :password%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><!-- <br /> -->
      <%= f.password_field :password, autocomplete: "off", class: "block"  %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, class: "block"  %><!-- <br /> -->
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "block"  %>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign up", class: "button mt1 mb1" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %></div>